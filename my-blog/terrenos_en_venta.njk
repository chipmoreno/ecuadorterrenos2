<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mapa de Terrenos en Venta | Ecuador Terrenos</title>
    <meta name="description" content="Explora los terrenos en venta en Ecuador en un mapa interactivo. Encuentra lotes y propiedades en tu área de interés y contacta directamente con los vendedores.">
    <meta name="keywords" content="mapa de terrenos, terrenos en venta, ecuador, propiedades, lotes, mapbox, gl, interactivo">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>

    <script src='https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.css' rel='stylesheet' />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        #map {
            width: 100%;
            height: 80vh; /* Adjust height as needed */
        }
        .marker {
            background-color: #2563eb; /* A solid blue color */
            width: 20px;
            height: 20px;
            border-radius: 50%;
            border: 2px solid white; /* A white border for visibility */
            cursor: pointer;
        }
        .mapboxgl-popup {
            max-width: 400px;
            font-family: 'Poppins', sans-serif;
        }
        .mapboxgl-popup-content {
            text-align: center;
            padding: 15px;
        }
        .mapboxgl-popup-content h3 {
            font-weight: 700;
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }
        .mapboxgl-popup-content p {
            font-size: 1rem;
            color: #4b5563;
        }
        .mapboxgl-popup-content a {
            color: #2563eb;
            font-weight: 600;
            text-decoration: none;
        }
        .mapboxgl-popup-content a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">
    <header class="bg-white shadow-md sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-blue-700">Ecuador Terrenos</a>
            <div class="hidden md:flex space-x-6 items-center">
                <a href="/#anunciar" class="text-gray-600 hover:text-blue-700 font-medium">Anunciar</a>
                <a href="/#about" class="text-gray-600 hover:text-blue-700 font-medium">Acerca de Nosotros</a>
                <a href="/#gallery" class="text-gray-600 hover:text-blue-700 font-medium">Galería</a>
            </div>
            <button id="mobile-menu-button" class="md:hidden">
                <i data-lucide="menu" class="w-6 h-6"></i>
            </button>
        </nav>
        <div id="mobile-menu" class="hidden md:hidden px-6 pb-4 space-y-2">
            <a href="/#anunciar" class="block text-gray-600 hover:text-blue-700 font-medium">Anunciar</a>
            <a href="/#about" class="block text-gray-600 hover:text-blue-700 font-medium">Acerca de Nosotros</a>
            <a href="/#gallery" class="block text-gray-600 hover:text-blue-700 font-medium">Galería</a>
        </div>
    </header>

    <main>
        <section class="py-12 bg-gray-100 text-center">
            <h1 class="text-3xl md:text-4xl font-bold mb-2">Terrenos en Venta en Ecuador</h1>
            <p class="text-gray-600 max-w-2xl mx-auto">Navega por el mapa para explorar los terrenos disponibles y haz clic en los marcadores para ver los detalles.</p>
        </section>

        <section id="map-container" class="py-12">
            <div id='map'></div>
        </section>
    </main>

    <footer class="bg-gray-800 text-white py-8">
        <div class="container mx-auto px-6 text-center">
            <p>&copy; 2025 Ecuador Terrenos. Todos los derechos reservados.</p>
            <p class="text-sm text-gray-400 mt-2">La plataforma gratuita para vender y comprar terrenos en Ecuador.</p>
        </div>
    </footer>

    <script>
    // --- Mobile Menu Toggle ---
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });

    // --- Mapbox GL JS Logic ---
    mapboxgl.accessToken = 'pk.eyJ1IjoiY2hpcG1vcmVubyIsImEiOiJjbWZzcTAzYWUwbWdkMm5wd3pwaHZpdzA2In0.PlN6xmaS36bINGV8N_F9kA';

    const map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/streets-v12',
        center: [-79.0045, -2.8974],
        zoom: 6
    });

    map.addControl(new mapboxgl.NavigationControl(), 'bottom-right');
    map.addControl(
        new mapboxgl.GeolocateControl({
            positionOptions: {
                enableHighAccuracy: true
            },
            trackUserLocation: true,
            showUserHeading: true
        })
    );
    
    const BACKEND_URL = 'https://us-central1-ultimate-life-472800-r4.cloudfunctions.net/fetch_listings';

    async function fetchListingsAndPopulateMap() {
        try {
            const response = await fetch(BACKEND_URL);
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            const listings = await response.json();
            
            listings.forEach(listing => {
    // This condition already works correctly
    if (listing.location && listing.location.coordinates && listing.location.coordinates.length === 2) {
        const [longitude, latitude] = listing.location.coordinates;
        
        const el = document.createElement('div');
        el.className = 'marker';

        // Use optional chaining or logical OR to handle missing data
        const title = listing.titulo || "Terreno sin título";
        const description = listing.descripcion || "Descripción no disponible.";
        const price = listing.precio ? `${listing.precio} USD` : "Precio no disponible";
        const oid = listing._id.$oid;

        const popup = new mapboxgl.Popup({ offset: 25 }).setHTML(`
            <div class="p-4 bg-white rounded-lg shadow-lg">
                <h3 class="font-bold text-base md:text-lg text-gray-900 mb-1">${title}</h3>
                <p class="text-sm text-gray-600 mb-2">${description}</p>
                <p class="font-bold text-blue-700 text-lg mb-2">${price}</p>
                <a href="/anuncio.html?id=${oid}" class="inline-block bg-blue-500 text-white px-4 py-2 rounded-full hover:bg-blue-600 transition-colors duration-200">Ver Detalles</a>
            </div>
        `);

        new mapboxgl.Marker(el)
            .setLngLat([longitude, latitude])
            .setPopup(popup)
            .addTo(map);
    }
});
        } catch (error) {
            console.error('Failed to fetch listings:', error);
        }
    }

    map.on('load', () => {
        fetchListingsAndPopulateMap();
    });
</script>
<script>
    lucide.createIcons();
</script>
</body>
</html>
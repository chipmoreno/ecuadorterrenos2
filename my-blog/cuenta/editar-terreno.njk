---
layout: "base.njk"
title: "Editar Anuncio"
---

<main>
    <section class="bg-gray-100 py-20">
        <div class="container mx-auto px-6 max-w-3xl">
            <div class="bg-white p-8 md:p-12 rounded-lg shadow-lg">
                <h1 class="text-3xl font-bold mb-6 text-center">Editar Anuncio</h1>
                <form id="edit-form" class="space-y-6">
                    <div>
                        <label for="titulo" class="block text-gray-700 font-semibold mb-2">Título del Anuncio</label>
                        <input type="text" id="titulo" name="titulo" required class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div>
                        <label for="descripcion" class="block text-gray-700 font-semibold mb-2">Descripción Completa</label>
                        <textarea id="descripcion" name="descripcion" rows="6" required class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"></textarea>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="provincia" class="block text-gray-700 font-semibold mb-2">Provincia</label>
                            <input type="text" id="provincia" name="provincia" required class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <div>
                            <label for="ciudad" class="block text-gray-700 font-semibold mb-2">Ciudad/Cantón</label>
                            <input type="text" id="ciudad" name="ciudad" required class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                        </div>
                    </div>
                    <div>
                        <label for="direccion" class="block text-gray-700 font-semibold mb-2">Dirección o Sector</label>
                        <input type="text" id="direccion" name="direccion" required class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="area" class="block text-gray-700 font-semibold mb-2">Área (m²)</label>
                            <input type="number" id="area" name="area" required class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <div>
                            <label for="precio" class="block text-gray-700 font-semibold mb-2">Precio (USD)</label>
                            <input type="number" id="precio" name="precio" required class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                        </div>
                    </div>
                    <div class="text-center pt-4">
                        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-full transition duration-300 w-full md:w-auto">
                            Actualizar Anuncio
                        </button>
                        <p id="message" class="mt-4 text-sm"></p>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>

<script>
    const form = document.getElementById('edit-form');
    const messageElement = document.getElementById('message');
    let listingId;

    async function fetchListingDetails() {
        const urlParams = new URLSearchParams(window.location.search);
        listingId = urlParams.get('id');
        if (!listingId) {
            messageElement.textContent = 'Error: No se encontró el ID del anuncio.';
            return;
        }

        const token = localStorage.getItem('authToken');
        if (!token) {
            window.location.href = '/iniciar-session';
            return;
        }

        try {
            const response = await fetch(`https://us-central1-ultimate-life-472800-r4.cloudfunctions.net/get_my_listings/${listingId}`, {
                headers: { 'Authorization': `Bearer ${token}` }
            });

            if (response.ok) {
                const listing = await response.json();
                Object.keys(listing).forEach(key => {
                    if (form.elements[key]) {
                        form.elements[key].value = listing[key];
                    }
                });
            } else {
                messageElement.textContent = 'No se pudieron cargar los detalles del anuncio.';
                messageElement.className = 'mt-4 text-sm text-red-600';
            }
        } catch (error) {
            messageElement.textContent = 'Ocurrió un error al cargar los detalles.';
            messageElement.className = 'mt-4 text-sm text-red-600';
        }
    }

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const token = localStorage.getItem('authToken');
        if (!token) return;

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
            const updateEndpoint = `https://us-central1-ultimate-life-472800-r4.cloudfunctions.net/edit_listing?listingId=${listingId}`;
            const response = await fetch(updateEndpoint, {
                method: 'PATCH',
                headers: {
                    'Authorization': `Bearer ${token}`,
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                messageElement.textContent = '¡Anuncio actualizado con éxito!';
                messageElement.className = 'mt-4 text-sm text-green-600';
                 setTimeout(() => {
                    window.location.href = '/cuenta/mis-terrenos';
                }, 1500);
            } else {
                const errorData = await response.json();
                throw new Error(errorData.message || 'No se pudo actualizar el anuncio.');
            }
        } catch (error) {
            messageElement.textContent = `Error: ${error.message}`;
            messageElement.className = 'mt-4 text-sm text-red-600';
        }
    });

    document.addEventListener('DOMContentLoaded', fetchListingDetails);
</script>
---
# This tells 11ty to use the data we fetched in `_data/listings.js`
pagination:
  data: listings
  size: 1
  alias: listing # Each item in the loop will be available as the 'listing' variable

# This creates a unique URL for each page, like /anuncios/terreno-en-manta-1a2b3c/
permalink: "anuncios/{{ listing.slug }}/index.html"

# Use the base layout
layout: "base.njk"

# Dynamically set the page title for SEO
title: "{{ listing.titulo }}"
---

<!-- This is the HTML structure for a single listing page -->
<div class="bg-white py-12">
    <div class="container mx-auto px-6">
        
        <!-- Listing Title and Location -->
        <div class="mb-8">
            <h1 class="text-3xl md:text-5xl font-bold text-gray-800">{{ listing.titulo }}</h1>
            <p class="text-xl text-gray-600 mt-2">{{ listing.ciudad }}, {{ listing.provincia }}</p>
        </div>

        <!-- Image Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
            {% for photo in listing.photos %}
                <img src="{{ photo }}" alt="Foto de {{ listing.titulo }}" class="w-full h-auto rounded-lg shadow-md object-cover">
            {% endfor %}
        </div>

        <!-- Listing Details -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            
            <!-- Main Info Column -->
            <div class="md:col-span-2">
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h2 class="text-2xl font-bold mb-4 border-b pb-2">Descripción</h2>
                    <p class="text-gray-700 whitespace-pre-wrap">{{ listing.descripcion }}</p>
                </div>
            </div>

            <!-- Sidebar Info Column -->
            <div>
                <div class="bg-blue-50 p-6 rounded-lg shadow-lg sticky top-24">
                    <div class="text-4xl font-bold text-green-600 mb-4">$ {{ listing.precio.toLocaleString() }}</div>
                    
                    <div class="space-y-3 text-lg">
                        <div class="flex justify-between">
                            <span class="font-bold">Área:</span>
                            <span>{{ listing.area }} m²</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="font-bold">Dirección:</span>
                            <span class="text-right">{{ listing.direccion }}</span>
                        </div>
                    </div>
                    
                    <div class="mt-6 border-t pt-4">
                        <h3 class="font-bold text-xl mb-2">Información del Vendedor</h3>
                        <p>{{ listing.seller_info.name }}</p>
                        <a href="mailto:{{ listing.seller_info.email }}" class="text-blue-600 hover:underline">{{ listing.seller_info.email }}</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>